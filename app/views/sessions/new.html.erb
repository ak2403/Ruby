<h1 align="center">Login</h1>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |detail| %>
    <div class="form-group">
        <div class="control-label col-sm-2">
            <%= detail.label :email %>
        </div>
        <div class="control-label col-sm-8">
            <%= detail.email_field :email, class: "form-control", placeholder: "Enter your email", autofocus: true %>
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-sm-2">
            <%= detail.label :password %>
        </div>
        <div class="control-label col-sm-8">
            <%= detail.password_field :password, class: "form-control", placeholder: "Enter password", autocomplete: "off" %>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= detail.submit "Login", class: 'btn btn-primary btn-lg' %>
        </div>
    </div>
<% end %>
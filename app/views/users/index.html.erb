<h1 align="center">Article Blog User</h1>

<div align="center">
    <%= will_paginate %>
</div>

<div align="center">
    <% @users.each do |person| %>
        <ul class="listing">
            <div class="row">
                <div class="well col-md-4 col-md-offset-4">
                    <li>
                    </li>
                    <li>
                        <%= link_to person.username, user_path(person) %>
                    </li>
                    <li>
                        <small>
                            <%= pluralize(person.articles.count, "article") if person.articles %>
                        </small>
                    </li>
                </div>
            </div>
        </ul>
    <% end %>
</div>

<div align="center">
    <%= will_paginate %>
</div>

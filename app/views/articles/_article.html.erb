<% obj.each do |list| %>
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
            <div class="well well-lg">
                <div class="article-title">
                    <%= link_to list.title, article_path(list) %>
                </div>
                <div class="article-body">
                    <%= truncate(list.description, length: 100) %>
                    <div class="article-meta-details">
                        <small>
                            Created by: <%= list.user.username if list.user %>,
                                        <%= time_ago_in_words(list.created_at) %> ago,
                                        Last updated: <%= time_ago_in_words(list.updated_at) %> ago,
                        </small>
                    </div>
                </div>

                <div class="article-actions">
                    <%= link_to "Edit this article", edit_article_path(list), class: "btn btn-xs btn-primary" %>
                    <%= link_to "Delete this article", article_path(list), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-xs btn-danger" %>
                </div>
            </div>
        </div>
    </div>
<% end %>
